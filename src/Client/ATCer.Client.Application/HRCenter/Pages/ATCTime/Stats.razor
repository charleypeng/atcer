@page "/atcer/hrcenter/stats"@namespace ATCer.HRCenter.Client.Pages.ATCTime@using AntDesign.Charts;<Table DataSource="data" Loading="isLoading">    <PropertyColumn Property="x=>x.UserName"></PropertyColumn>    <AntDesign.Column TData="string">        @if(context.Load >= 1)        {            <RingProgress Data="@context.Load" Config="ringConfigRed"></RingProgress>        }        else        {            <RingProgress Data="@context.Load" Config="ringConfig"></RingProgress>        }    </AntDesign.Column></Table>@code {    private List<ATCTimeStats> data;    private bool isLoading;    private readonly RingProgressConfig ringConfig = new RingProgressConfig    {        Width = 60,        Height = 60,        Color = "Green",    };    private readonly RingProgressConfig ringConfigRed = new RingProgressConfig    {        Width = 60,        Height = 60,        Color = "Red",    };    protected override async Task OnInitializedAsync()    {        isLoading = true;        data = new List<ATCTimeStats>(){            new ATCTimeStats{                UserName = "彭磊",                Load = 0.78            },            new ATCTimeStats{                UserName = "饭饭2",                Load = 0.96            },            new ATCTimeStats{                UserName = "饭饭3",                Load = 1            },            new ATCTimeStats{                UserName = "饭饭",                Load = 0.26            }        };        await base.OnInitializedAsync();        isLoading = false;    }}